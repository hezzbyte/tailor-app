<?xml version='1.0' encoding='utf-8'?>
<widget id="com.tailorapp.app" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>Tailor App</name>
    <description>
        An application for the tailor/fashion designers community.
    </description>
    <author email="hezzbyte@gmail.com" href="http://adeyemihezekiah.com">
        Adeyemi Hezekiah
    </author>
    <content src="index.html" />
    <access origin="*" />
    <allow-navigation href="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
        <preference name="BackupWebStorage" value="none" />
    </platform>
    <preference name="android-targetSdkVersion" value="28" />
    <preference name="DisallowOverscroll" value="true" />
    <plugin name="cordova-plugin-console" spec="1.0.7" />
    <plugin name="cordova-plugin-splashscreen" spec="5.0.3" />
    <plugin name="cordova-plugin-statusbar" spec="1.0.1" />
    <plugin name="cordova-plugin-whitelist" spec="1.2.2" />
    <splash src="splash.png" />
    <platform name="android">
        <icon density="ldpi" src="res/icon/android/drawable-ldpi-icon.png" />
        <icon density="mdpi" src="res/icon/android/drawable-mdpi-icon.png" />
        <icon density="hdpi" src="res/icon/android/drawable-hdpi-icon.png" />
        <icon density="xhdpi" src="res/icon/android/drawable-xhdpi-icon.png" />
        <icon density="xxhdpi" src="res/icon/android/drawable-xxhdpi-icon.png" />
        <icon density="xxxhdpi" src="res/icon/android/drawable-xxxhdpi-icon.png" />
        <splash density="ldpi" src="res/screen/android/drawable-port-ldpi-screen.png" />
        <splash density="mdpi" src="res/screen/android/drawable-port-mdpi-screen.png" />
        <splash density="hdpi" src="res/screen/android/drawable-port-hdpi-screen.png" />
        <splash density="xhdpi" src="res/screen/android/drawable-port-xhdpi-screen.png" />
        <splash density="xxhdpi" src="res/screen/android/drawable-port-xxhdpi-screen.png" />
        <splash density="xxhdpi" src="res/screen/android/drawable-port-xxxhdpi-screen.png" />
	</platform>   
	
	<preference name="phonegap-version" value="cli-7.1.0" />
	
	<preference name="SplashScreen" value="screen" />
    <preference name="SplashScreenDelay" value="3000" />
    <preference name="ShowSplashScreenSpinner" value="false" />
    <preference name="SplashShowOnlyFirstTime" value="false" />
    <engine name="browser" spec="~5.0.4" />
    <engine name="android" spec="~7.1.4" />
    <plugin name="phonegap-plugin-barcodescanner" spec="~8.1.0">
        <variable name="ANDROID_SUPPORT_V4_VERSION" value="27.+" />
    </plugin>
</widget>
